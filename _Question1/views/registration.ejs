    <div class="container pt-5">
        <h1>Register</h1>
        <div class="card" style="width: 35rem;">
            <div class="card-body">
                <form action="/register" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Name</label>
                            <input type="text" name="name" class="form-control" id="inputEmail4"
                                placeholder="John Doe">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Password</label>
                            <input type="password" name="password" class="form-control" id="inputPassword4"
                                placeholder="*************">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputAddress">date_of_birth.</label>
                        <input type="number" name="date od birth" class="form-control" id="inputAddress"
                            placeholder="02/12/2000">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputState">address</label>
                            <select name="address" id="inputState" class="form-control">
                                <option selected>Choose...</option>
                                <option value="BSCCS">Madina</option>
                                <option value="BSCICT">Adenta</option>
                                <option value="BSCMIS">Accra</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">contact</label>
                            <select name="contact" type=number class="form-control">
                               
                                
                                <option value="026483249">026483249</option>
                            </select>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">emergency_contact</label>
                            <input name="Emergency Contact" type="number" class="form-control">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">REGISTER</button>
                </form>
            </div>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
